<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
  <title>Blog</title>
</head>

<body>
  <%- include('./partials/nav') %>
  <div class="container mt-3">
    <div class="row">
      <div class="col-md-6">
        <img src="<%= blog .image %>" class="card-img-top" alt="..." style="height: 200px; object-fit: cover;"> <!-- Set the height and width for the image -->
      </div>
      <div class="col-md-6">
        <h2><%= blog.title %></h2>
        <p><%= blog.description %></p>
      </div>
      <div class="">
        <img src="<%= blog.createdBy.profileImageUrl %>" class="card-img-top" alt="Avatar" style="height: 100px; width: 100px; object-fit: cover; border-radius: 50%;"> <!-- Set the image as a circular avatar -->
        <%= blog.createdBy.fullName %>
      </div>
    </div>
  </div>
  <% if (locals.user ) { %>
  <form class=action="/blog/comment/<%= blog._id %>" method="post">
    <div class="container mt-3">
      <div class="mb-3">
        <label for="comment" class="form-label">Comment</label>
        <input type="text" class="form-control" id="comment" name="comment" placeholder="Enter your comment">
        <button type="submit" class="btn btn-primary mt-3">Submit</button>
      </div>
    </div>
  </form>
  <% } %>


  <%- include('./partials/scripts') %>
  </script>
</body>

</html>